{# empty Twig template #}
<table border = "2">
    <tr>
        <th>Id</th>
        <th>UserName</th>
        <th>FirstName</th>
        <th>LastName</th> 
        <th>DOB</th>
        <th>BloodGroup</th>
        <th>Gender</th>
        <th>Emails</th>
        <th>MobileNumbers</th>
        <th>Education-Institute</th>
        <th>Interests</th>
        <th colspan="2">Modify</th>
    </tr>
{% for user in users %}
    <tr>  
        <td>{{ user.id }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.firstname }}</td>   
        <td>{{ user.lastname }}</td>
        <td>{{ user.dob|date('Y-m-d') }}</td>
        <td>{{ user.blood }}</td>
        <td>{{ user.gender }}</td>
        <td>
            {% for email in user.emails %}
                {{ email.emailAddr}}
                <br/>
            {% endfor %}
        </td>
        <td>
            {% for mobilenumber in user.mobilenumbers %}
                {{ mobilenumber.number }}
                <br/>
            {% endfor %}
        </td>
        <td>
            {% for edu in user.education %}
                {{ edu.eduType }}-{{ edu.institute }}
                <br/>
            {% endfor %}
        </td>
        <td>
            {% for area in user.interests %}
                {{ area.interest }}
                <br/>
            {% endfor %}
        </td>
        <td>
            <input type="button" value="View"
                   onclick="location.href='/users/{{user.id}}';" >
            <input type="button" value="Edit"
                   onclick="location.href='/users/edit/{{user.id}}';" >
        </td>
    </tr>
{% endfor %}
</table>
    
    